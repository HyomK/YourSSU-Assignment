<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ssu_et_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:background="@drawable/ssu_inputfield_bg"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ssu_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:textSize="15sp"
                />
            <RelativeLayout
                android:id="@+id/ssu_et_option"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="16dp"
                >
                <ImageView
                    android:id="@+id/ssu_et_delete_iv"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_icon"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/ssu_et_email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ssu_email"
                    android:textSize="15dp"
                    android:textColor="@color/text_tertiary"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            tools:text="도움말 메세지"
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"
            />
    </LinearLayout>

